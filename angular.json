{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "hocs": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss",
          "skipTests": true
        },
        "@schematics/angular:class": {
          "skipTests": true
        },
        "@schematics/angular:directive": {
          "skipTests": true
        },
        "@schematics/angular:guard": {
          "skipTests": true
        },
        "@schematics/angular:interceptor": {
          "skipTests": true
        },
        "@schematics/angular:module": {
          "skipTests": true
        },
        "@schematics/angular:pipe": {
          "skipTests": true
        },
        "@schematics/angular:service": {
          "skipTests": true
        }
      },
      "root": "projects/hocs",
      "sourceRoot": "projects/hocs/src",
      "prefix": "hoc",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/hocs",
            "index": "projects/hocs/src/index.html",
            "main": "projects/hocs/src/main.ts",
            "polyfills": "projects/hocs/src/polyfills.ts",
            "tsConfig": "projects/hocs/tsconfig.app.json",
            "aot": true,
            "assets": ["projects/hocs/src/favicon.ico", "projects/hocs/src/assets"],
            "styles": ["projects/hocs/src/styles.scss"],
            "scripts": []
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "projects/hocs/src/environments/environment.ts",
                  "with": "projects/hocs/src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "hocs:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "hocs:build:production"
            }
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": ["projects/hocs/tsconfig.app.json", "projects/hocs/tsconfig.spec.json"],
            "exclude": ["**/node_modules/**"]
          }
        }
      }
    },
    "@hocs/ngx-unsubscriber": {
      "projectType": "library",
      "root": "projects/@hocs/ngx-unsubscriber",
      "sourceRoot": "projects/@hocs/ngx-unsubscriber/src",
      "prefix": "hoc",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "projects/@hocs/ngx-unsubscriber/tsconfig.lib.json",
            "project": "projects/@hocs/ngx-unsubscriber/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/@hocs/ngx-unsubscriber/tsconfig.lib.prod.json"
            }
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/@hocs/ngx-unsubscriber/tsconfig.lib.json",
              "projects/@hocs/ngx-unsubscriber/tsconfig.spec.json"
            ],
            "exclude": ["**/node_modules/**"]
          }
        }
      }
    }
  },
  "defaultProject": "hocs"
}
